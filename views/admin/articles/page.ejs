<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbarhome.ejs') %>
<body>
    <div class="container">
        <br>
        <% result.articles.rows.forEach((article) => { %>
            <div class="card">
                <div class="card-header"><%= article.title %></div>
                <div class="card-body"><a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a></div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a href="/articles/page/<%= (result.page - 1) %>" href="">Anterior</a>
                <% } else if (result.page == 2) { %>
                    <a href="/" href="">Anterior</a>
                <% } %>

                <% if(result.next) { %>
                <a href="/articles/page/<%= (result.page + 1) %>">Ver mais</a>
                <% } %>
            </div>
        </div>
    </div>
</body>
<%- include('../../partials/footer.ejs') %>