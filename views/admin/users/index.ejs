<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <h2>Usuários</h2>
        <a href="/admin/users/new" class="btn btn-success">Novo usuário</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>E-mail</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user) => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/admin/users/edit/<%= user.id %>" class="btn btn-warning">Editar</a>
                        <a href="#void" onclick="remove('<%= user.id %>');" class="btn btn-danger">Deletar</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
<script>
    function remove(id) {
        if (confirm("Confirma a deleção?")) {
            window.location.href = "/admin/users/delete/" + id
        } else {
            return false
        }
    }
</script>
